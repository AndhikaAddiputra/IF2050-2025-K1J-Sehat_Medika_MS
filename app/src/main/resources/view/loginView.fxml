<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.7" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController" prefWidth="600" prefHeight="400" style="-fx-background-color: white;">
   <children>
      <VBox alignment="CENTER" spacing="5" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
         <Label text="Klinik Sehat Medika" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <Label text="Sistem Manajemen Terintegrasi" textAlignment="CENTER">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
      </VBox>

      <AnchorPane prefWidth="300" prefHeight="300" style="-fx-background-color: #46D6A9;" AnchorPane.topAnchor="100" AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150" AnchorPane.bottomAnchor="50">
         <children>
            <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
               <Label text="Login">
                  <font>
                     <Font name="Al Bayan Bold" size="16.0" />
                  </font>
               </Label>

               <Label text="Username">
                  <font>
                     <Font size="10.0" />
                  </font>
               </Label>
               <TextField fx:id="usernameField" promptText="Username" prefHeight="30" />

               <Label text="Password">
                  <font>
                     <Font size="10.0" />
                  </font>
               </Label>
               <PasswordField fx:id="passwordField" promptText="Password" prefHeight="30" />

               <Label fx:id="wrongLogin" textFill="#ff4242" textAlignment="CENTER">
                  <font>
                     <Font size="10.0" />
                  </font>
               </Label>

               <Button fx:id="masukButton" text="Masuk" prefHeight="30" onAction="#handleLoginButtonAction" />

               <Label text="Belum punya akun?">
                  <font>
                     <Font size="10.0" />
                  </font>
               </Label>

               <Hyperlink text="Daftar di sini" />
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>